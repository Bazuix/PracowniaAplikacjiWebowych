generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Wpis {
  id          Int        @id @default(autoincrement())
  tytul       String
  tresc       String
  utworzono   DateTime   @default(now())

  kategoriaId Int
  kategoria   Kategoria  @relation(fields: [kategoriaId], references: [id])

  komentarze  Komentarz[]
}

model Kategoria {
  id    Int    @id @default(autoincrement())
  nazwa String @unique @db.VarChar(100)

  wpisy Wpis[]
}

model Komentarz {
  id      Int      @id @default(autoincrement())
  autor   String
  tresc   String
  data    DateTime @default(now())

  wpisId  Int
  wpis    Wpis     @relation(fields: [wpisId], references: [id], onDelete: Cascade)
}

